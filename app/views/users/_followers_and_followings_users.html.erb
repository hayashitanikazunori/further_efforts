<div class="follows_container">
  <% follows.each do |follow| %>
    <table class="table table-hover">
      <tr class="table-light">
          <th>
            <%= link_to user_path(follow), :class => "link_style" do %>
              <%= render partial: "shares/user_avatar", locals: {user: follow} %><%= follow.name %>
            <% end %>
        </th>
      </tr>
    </table>
  <% end %> 
</div>