<div class="week_ranking_container">
  <% week_ranking.each.with_index(1) do |user, i| %>
    <div class="posts_boxs_fream">
      <div class="ranking">
        <% if i == 1 %>
          <%= image_tag 'rank_top1', :class => 'image_size_70' %>
        <% elsif i == 2 %>
          <%= image_tag 'rank_top2', :class => 'image_size_70' %>
        <% elsif i == 3 %>
          <%= image_tag 'rank_top3', :class => 'image_size_70' %>
        <% else %>
          <h2><%= i %></h2>
        <% end %>
      </div>

      <%= link_to user_path(user), :class => "underber_delete" do %>
        <div class="post_box btn paper-raise">
          <div class="post_do_user_profile">
              <%= render partial: "shares/user_avatar", locals: {user: user} %>
              <h2><%= user.name %></h2>
          </div>

          <div class="box_field">
            <label>今週の学習時間</label><br>
            <span class="strong"><%= user.week_all_total_learned_time / 60 %>時間<%= user.week_all_total_learned_time % 60 %>分</span>
          </div>

          <div class="box_field">
            <label>フォロアー</label><br>
            <span><%= user.followers.count %></span>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
