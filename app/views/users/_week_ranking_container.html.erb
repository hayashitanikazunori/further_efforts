<div class="user_rank_container">
  <% week_ranking.each.with_index(1) do |user, i| %>
    <div class="posts_boxs_fream">
      <div class="user_rank">
        <% if i == 1 %>
          <%= image_tag 'rank_top1', :class => 'image_size_70' %>
        <% elsif i == 2 %>
          <%= image_tag 'rank_top2', :class => 'image_size_70' %>
        <% elsif i == 3 %>
          <%= image_tag 'rank_top3', :class => 'image_size_70' %>
        <% else %>
          <h2><%= i %></h2>
        <% end %>
      </div>

      <a href="/users/<%= user.id %>" class="font_brack">
        <div class="post_box btn paper-raise">
          <div class="post_do_user_profile">
            <ul>
              <li><%= render partial: "shares/user_avatar", locals: {user: user} %></li>
              <li><%= user.name %></li>
            </ul>
          </div>

          <ul>
            <li>
              <label>今週の学習時間</label><br>
              <%= user.week_all_total_spans / 60 %>時間<%= user.week_all_total_spans % 60 %>分
            </li>
            
            <li>
              <label>フォロアー</label><br>
              <%= user.followers.count %>
            </li>
          </ul>
        </div>
      </a>
    </div>
  <% end %>
</div>
