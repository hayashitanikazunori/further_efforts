<div class="conotent">
  <div class="user_profile">
    <div class="user_image">
      <%= render partial: "shares/user_avatar", locals: {user: @user} %>
    </div>
    <div class="user_name">
      <%= link_to "#{@user.name}", "/users/edit", :class => 'user_name_p' %>
    </div>
    <div class="user_somehistory">
      <%# <p>エンジニア歴</p> # 導入するか検討%>
      <p><%= link_to "フォロー(#{@user.followings.count})", followings_user_path(@user), :class => 'user_somehistory_p' %></p>
      <p><%= link_to "フォロアー(#{@user.followers.count})", followers_user_path(@user), :class => 'user_somehistory_p' %></p>
      <p>いいねした数</p>
    </div>
    <% if @user != current_user%>
      <% if current_user.following?(@user) %>
        <%= form_with(model: current_user.following_relationships.find_by(following_id: @user.id), method: :delete) do |f| %>
          <%= f.hidden_field :following_id %>  
          <%= f.submit "フォロー済み", class: "btn btn-outline-secondary" %>
        <% end %>
      <% else %>
        <%= form_with(model: current_user.following_relationships.build) do |f| %>
          <%= f.hidden_field :following_id, value: @user.id %>
          <%= f.submit "フォローする", class: "btn btn-outline-secondary" %>
        <% end %>
      <% end %>
    <% end %>
  </div>
  
  <%# カレンダーが実装完了次第表示させる %>
  <div class="calender">
   <p>カレンダーを表示</p>
  </div>

  <%# postが実装完了次第表示させる %>
  <div class="learning-profile">
    <p>学習している内容を表示<p>
  </div>

  <%# 投稿機能が実装完了次第表示させる %>
  <div class="user_posts">
    <%= link_to "ユーザー投稿一覧を表示", "#", :class => 'user_posts_p' %>
  </div>

  <%# likeが実装完了次第表示させる %>
  <div class="user_likes">
    <%= link_to "いいねしている投稿を表示させる", "#", :class => 'user_likes_p' %>
  </div>
</div>

<%= render "shares/footer" %>