<div class="conotent">
  <div class="user_profile">
    <div class="user_image">
      <%= render partial: "shares/user_avatar", locals: {user: @user} %>
    </div>
    <div class="user_name">
      <%= link_to "#{@user.name}", "/users/edit", :class => 'user_name_p' %>
    </div>
    <div class="user_somehistory">
      <%# <p>エンジニア歴</p> # 導入するか検討%>
      <p><%= link_to "フォロー(#{@user.followings.count})", followings_user_path(@user), :class => 'user_somehistory_p' %></p>
      <p><%= link_to "フォロアー(#{@user.followers.count})", followers_user_path(@user), :class => 'user_somehistory_p' %></p>
      <p>いいねした数</p>
    </div>
    <%= render partial: "follow_form", locals: {user: @user} %>
  </div>
  
  <%# カレンダーが実装完了次第表示させる %>
  <div class="calender">
   <p>カレンダーを表示</p>
  </div>

  <%# postが実装完了次第表示させる %>
  <div class="learning-profile">
    <h3>過去の投稿</h3>
    <% @user.week_total.each do |kind| %>
    <% @user.week_total2.each do |span| %>
    <ul class="learning_box" style="list-style: none;">
      <li>
        <p>カインドカラムをのせる</p>
        <%= kind.kind %>
      </li>
      <li>
        <p>今週の合計時間をのせる</p>
        <%#= span / 60 %>時間<%#= span % 60 %>分
        <%= span %>
      </li>
      <li>
        <p>今週の合計時間をのせる</p>
      </li>
      <li>
        <p>学習の合計時間をのせる</p>
      </li>
    </ul>
    <% end %>
    <% end %>
  </div>
  <div class="user_posts">
  <h3>過去の投稿</h3>
    <%= render partial: "shares/posts_box", locals: {posts: @user.posts} %>
  </div>
</div>

<%= render "shares/footer" %>