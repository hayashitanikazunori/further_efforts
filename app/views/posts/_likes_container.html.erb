<div class="like_btns">
  <% if current_user.already_liked?(post) %>
    <%= link_to post_like_path(post.id), method: :delete, remote: true, :id => "like_delete" do%>
      <button class="btn btn-outline-secondary">いいね！済み</button>
    <% end %>
  <% else %>
    <%= link_to post_likes_path(post.id), method: :post, remote: true, :id => "like_create" do%>
      <button class="btn btn-outline-secondary">いいね！</button>
    <% end %>
  <% end %>
</div>

<h4>いいねしたユーザー: <%= post.likes.count %></h4>

<% post.liked_users.each do |liked_user| %>
  <div class="liked_user">
    <%= link_to user_path(liked_user.id), :class => "link_style" do %>
      <%= render partial: "shares/user_avatar", locals: {user: liked_user} %>
      <%= liked_user.name %>
    <% end %>
  </div>
<% end %>
