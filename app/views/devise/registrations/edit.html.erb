<div class="forms">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="post_field">
      <%= f.label :名前 %><br />
      <%= f.text_field :name, :class => "form-control" %>
    </div>

    <div class="post_field">
      <%= f.label :アバター写真 %><br />
      <%= f.file_field :avatar %>
    </div>

    <div class="post_field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="post_field">
      <%= f.label :変更後のパスワード %><br />
      <%= f.password_field :password, autocomplete: "new-password", :class => "form-control" %>
      <small id="field-helper" class="form-text text-muted">パスワードを変更しない場合は空白にしてください</small>
    </div>

    <div class="post_field">
      <%= f.label :'変更後のパスワード(確認)' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control" %>
    </div>

    <div class="post_field">
      <%= f.label :'現在のパスワード' %><br />
      <%= f.password_field :current_password, autocomplete: "current-password", :class => "alert alert-dismissible alert-danger", :placeholder => "(必須)" %>
      <small id="field-helper" class="form-text text-muted">本人確認のため、現在のパスワードを入力してください</small>
    </div>

    <div class="actions">
      <input type="submit" name="commit" class="btn btn-primary" data-disable-with="変更する" value="変更する">
    </div>

  <% end %>
</div>