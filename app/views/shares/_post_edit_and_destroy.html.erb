<% if post.user_id == current_user.id %>
  <%= link_to edit_post_path(post.id), :class => "link_style" do %>
    <i class="far fa-edit action-btn"></i>
  <% end %>
  
  <%= link_to post_path(post.id), method: :delete, :id => 'delete', :class => "link_style", :onclick => "return confirm('本当に削除しますか？')" do %>
    <i class="far fa-trash-alt action-btn"></i>
  <% end %>
<% end %>
